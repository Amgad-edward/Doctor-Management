@model PriceView
@{ 
    ViewData["Titel"] = (Model.IsCreate ? "Add New Price" : $"Edit {Model.genderprice}");
}

<h3>@(Model.IsCreate ? "Add New Price" : $"Edit {Model.genderprice}");</h3>
<hr />


<form method="POST" asp-action="@(Model.IsCreate ?"Create" :"Edit")">
    <div class="row">
        <div class="col-md-4">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="genderprice"></label>
                <input type="text" class="form-control" asp-for="genderprice" maxlength="30" placeholder="Name gender price" />
                <span asp-validation-for="genderprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThePrice"></label>
                <input type="number" class="form-control" asp-for="ThePrice"   />
                <span asp-validation-for="ThePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time"></label>
                <input type="number" class="form-control" min="3" asp-for="Time" />
            </div>
            <button type="submit" class="btn btn-primary mt-3 w-25">
                <i class="bi bi-check"></i>
                Save
            </button>
            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>


@section Scripts{ 

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");  }




}