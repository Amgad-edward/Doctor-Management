<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(ViewBag.login ? Hex.NameOwner.ConvertName() : "Application")</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/animate.css/animate.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    @if (ViewBag.login)
    {
        <link icon="" rel="icon" href="@(Hex.showimage(Hex.Logo))" />
    }
    else
    {
        <link icon="" rel="icon"  href="~/profile.png"/>
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm fixed-top navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (ViewBag.login)
                {
                    <img class="logo" src="@Hex.showimage(Hex.Logo)" style="width:50px" />
                    <a class="navbar-brand ml-2" asp-area="" asp-controller="Home" asp-action="Out">@Hex.NameOwner.ConvertName()</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Out">Home</a>
                            </li>
                            @if (ViewBag.admin)
                            {
                                <li class="nav-item ml-2 mb-2">
                                    <div class="dropdown">
                                        <button class="btn btn-info dropdown-toggle" type="button" id="btuNoty" data-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-bell"></i>
                                            <span class="badge badge-light" id="countNoty"></span>
                                            <span class="sr-only"></span>
                                        </button>
                                        <div class="dropdown-menu" id="dvNoty" aria-labelledby="btuNoty">

                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown ml-2 mb-2">
                                        <button class="btn btn-outline-success dropdown-toggle" type="button" id="btuMessage" data-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-chat-dots"></i>
                                            <span class="badge badge-info" id="countMess">0</span>
                                            <span class="sr-only"></span>
                                        </button>
                                        <div class="dropdown-menu overflow-auto" id="dvmess" style="direction:rtl;text-align:right" aria-labelledby="btuMessage">

                                        </div>
                                    </div>
                                </li>

                            }

                        </ul>

                        <!-- Example single danger button -->
                        @if (!ViewBag.admin)
                        {
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary  dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-check-fill"></i>
                                    @ViewBag.user
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="GetReveals" target="_blank" asp-controller="Reveals"><i class="bi bi-person-check-fill"></i> حجز مخصص</a>
                                    <a class="dropdown-item" asp-action="Index" target="_blank" asp-controller="Customer">العملاء<i class="bi bi-person-check-fill"></i> </a>
                                    <a class="dropdown-item" asp-action="AddnameList" target="_blank" asp-controller="checks">قائمة اضافة التحاليل <i class="bi bi-list-columns-reverse"></i></a>
                                    <a class="dropdown-item" asp-action="Normals" target="_blank" asp-controller="Checks"> <i class="bi bi-check2-square"></i> اضافة قيم التحاليل</a>
                                    <a class="nav-link text-dark" asp-controller="Reveals" target="_blank" asp-action="Index">جدول الحجوزات <i class="bi bi-list-ul"></i></a>
                                    <a class="nav-link text-dark" asp-controller="Medic" target="_blank" asp-action="Index"><i class="bi bi-list-ul"></i> قائمة الادوية المسجلة</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-action="logout" asp-controller="Home"><i class="bi bi-door-open"></i> Log out</a>
                                </div>
                            </div>

                        }
                        else
                        {
                            <a class="btn btn-outline-success mr-4" asp-action="Privacy" asp-controller="Home">Reveal Room <i class="bi bi-door-closed"></i></a>
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary  dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <span style="color:#38b72e">
                                        <i class="bi bi-person-circle"></i>
                                    </span>
                                    @ViewBag.user
                                </button>
                                <div class="dropdown-menu">
                                    <a class="nav-link text-success" asp-controller="Home" asp-action="Privacy"><i class="bi bi-door-closed"></i> Reveal Room</a>
                                    <div class="dropdown-divider">
                                    </div>
                                    <a class="dropdown-item" asp-action="Index" target="_blank" asp-controller="Plane"><i class="bi bi-diagram-3"></i> Plane of Reveasl</a>
                                    <a class="dropdown-item" asp-action="GetReveals" target="_blank" asp-controller="Reveals"><i class="bi bi-person-check-fill"></i> Reveasl Of</a>
                                    <a class="dropdown-item" asp-action="Index" target="_blank" asp-controller="Customer"><i class="bi bi-person-check-fill"></i> Customers</a>
                                    <a class="dropdown-item" asp-action="AddnameList" target="_blank" asp-controller="checks"><i class="bi bi-list-columns-reverse"></i> List Name check</a>
                                    <a class="dropdown-item" asp-action="Index" target="_blank" asp-controller="Login"><i class="bi bi-person-workspace"></i> Users Login</a>
                                    <a class="dropdown-item" asp-action="Index" target="_blank" asp-controller="backups"><i class="bi bi-layer-backward"></i> BackUp</a>
                                    <a class="dropdown-item" asp-action="Details" target="_blank" asp-controller="Owner"><i class="bi bi-info-circle"></i> My Info</a>
                                    <a class="dropdown-item" asp-action="Index" target="_blank" asp-controller="Surgery"><i class="bi bi-info-circle"></i> Surgery</a>
                                    <a class="dropdown-item" asp-action="Normals" target="_blank" asp-controller="Checks"><i class="bi bi-check2-square"></i> Normal Result</a>
                                    <a class="nav-link text-dark" asp-controller="Reveals" target="_blank" asp-action="Index"><i class="bi bi-list-ul"></i> Reveals List</a>
                                    <a class="nav-link text-dark" asp-controller="Medic" target="_blank" asp-action="Index"><i class="bi bi-list-ul"></i> List Medics</a>
                                    <a class="nav-link text-dark" asp-controller="Employee" target="_blank" asp-action="Index"><i class="bi bi-person-circle"></i> Employee</a>
                                    <div class="dropdown-divider">
                                    </div>
                                    <a class="dropdown-item" asp-action="logout" asp-controller="Home"><i class="bi bi-door-open"></i> Log out</a>
                                </div>
                            </div>

                            <div class="btn-group ml-2">
                                <button type="button" class="btn btn-outline-primary  dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-diagram-3-fill"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="price" target="_blank" asp-action="Index"><i class="bi bi-currency-dollar"></i> Reveal Price</a>
                                    <a class="dropdown-item" asp-controller="AccountEnter" target="_blank" asp-action="Index"><i class="bi bi-bank2"></i> Account Enter</a>
                                    <a class="dropdown-item" asp-controller="Pays" target="_blank" asp-action="Index"><i class="bi bi-calculator"></i> Account Pays</a>
                                    <a class="dropdown-item" asp-controller="Reveals" target="_blank" asp-action="Account"><i class="bi bi-chevron-bar-contract"></i> Account Reveal</a>
                                    <a class="dropdown-item" asp-controller="chart" target="_blank" asp-action="Index"><i class="bi bi-bar-chart"></i> Chart</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="AccountMove" target="_blank" asp-action="Index"><i class="bi bi-arrow-down-up"></i> Account Move</a>
                                </div>
                            </div>

                        }
                    </div>

                    <div class="form-inline my-2 my-lg-0 ml-2">
                        <input class="form-control mr-sm-2 searchin" id="txtsearch" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light text-success my-2 my-sm-0" id="btusearch" type="button">Search</button>
                    </div>
                }

            </div>

        </nav>
    </header>


    <div class="container" style="margin-top:7%">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>




    @if (ViewBag.login)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                By Amgad Edward  &copy; @DateTime.Now.Year - @(ViewBag.login ? Hex.NameOwner : "") - <a asp-area="" asp-controller="Home" asp-action="Out">Home</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/read-excel-file/bundle/read-excel-file.min.js"></script>
    <script src="~/lib/Chart.js/chart.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")

<script>

    var unevasel = setInterval(function () {
        IsActive();

    }, 10000);

    $(document).ready(function () {
            var admin = @(ViewBag.admin ? "true":"false");
            if (admin) {
                $('#dvNoty').children().remove();
                getfixed();
                getMessage();
                getReadMassega();
                setInterval(function () {
                    getMessage();
                    getReadMassega();
                }, 5000);
            }

        $('#btusearch').click(function () {

            Serach();
        })

        $('#txtsearch').keypress((e) => {

            if (e.keyCode == 13) {
                Serach();
            }

        });


    });


    function Serach() {
        let value = $('#txtsearch').val();
        if (value != "" || value != null) {
            $.ajax({
                url: '/Back/Searched',
                type: 'POST',
                data: { text: value },
                success: function (data) {
                    if (data != "") {
                        window.open(data);
                    }
                    else {
                        toastr.error('No Resulte');
                    }

                },
                error: function (e) {
                    console.log(e.responseText);
                }

            });
        }
    }

    function IsActive() {

        let isTry = @(Hex.IsTry? "true":"false");
        if (!isTry) {

           let Avtive = @(Hex.GetActive()? "true" : "false");
           if (Avtive == false) {
            toastr.error("Application in Not Active !!!");
            window.open("/Home/Logout", "_self");
            clearInterval(unevasel);
           }
        }

    }

      function getfixed() {
            $.ajax({

                url: '/Back/GetFixed',
                type: 'GET',
                success: function (data) {
                    $('#countNoty').text(data.length);
                    let Noty = $('#dvNoty');
                    if (data.length > 0) {
                        for (let i = 0; i < data.length; i++) {
                            let add = "<a class='dropdown-item' href='" + data[i].url + "'> Pays : " + data[i].name + " Amount : " + data[i].value + "</a>";
                            Noty.append(add);
                        }
                        isshow = true;
                    }
                },
                error: function (e) {
                    console.log(e.responseText);
                }

            });
    }

     function getMessage() {

         $.ajax({
             url: '/Message/GetMessgaeDoctor',
             type: 'GET',
             success: function (data) {
                 if (data.length > 0) {

                     for (var i = 0; i < data.length; i++) {
                         toastr.info(data[i].message);
                         $.ajax({
                             url: '/Message/EditeMessageDoctor/' + data[i].id,
                             type: 'GET',
                             success: function () {
                                 
                             }, error: function (e) {
                                 console.log(e.responseText);
                             }
                         });
                     }
                 }
             },
             error: function (e) {
                 console.log(e.responseText);
             }
         });

    }

    function getReadMassega() {
        let dvmess = $('#dvmess');
        let count = $('#countMess');
        $.ajax({
            url: '/Message/GetMessgaeDoctorRead',
            type: 'GET',
            success: function (data) {
                if (data.length > 0) {
                    dvmess.children().remove();
                    count.text(data.length);
                    dvmess.append("<a class='btn btn-link' href='javascript:;' onclick='delallmessage();'>حذف كل الرسائل المقروءة</a>");
                    for (var i = 0; i < data.length; i++) {
                        let mess = "<div class='btn btn-ligth text-dark'>" + data[i].date + " : " + data[i].message + "</div><hr/>";
                        dvmess.append(mess);
                    }
                } else {
                    dvmess.children().remove();
                    count.text("0");
                }
            },
            error: function (e) {
                console.log(e.responseText);
            }

        });
    }

    function delallmessage() {

        $.ajax({
            url: '/Message/DeleteAllRead',
            type: 'GET',
            success: function () {

            },
            error: function (e) {
                console.log(e.responseText);
            }
        });
    }

</script>
</body>
</html>
