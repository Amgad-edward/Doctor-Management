@model ResultNormal

@{
    ViewData["Title"] = "Edit Normal";
}

<h1>Edit Normal Resulte</h1>

<h4>ResultNormal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditNormal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option>M&F</option>
                    <option>M</option>
                    <option>F</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Normal" class="control-label"></label>
                <input type="number" asp-for="Normal" class="form-control" />
                <span asp-validation-for="Normal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
