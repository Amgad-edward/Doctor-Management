@model AccountEnterView
@{ 
    ViewData["Titel"] = $"Edit {Model.From}";
}

<h3>Edit @Model.From</h3>
<hr />

<form method="POST" asp-action="Edit">
    <div class="row">

        <div class="col-md-7">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="From"></label>
                <input type="text" class="form-control" asp-for="From" maxlength="40" placeholder="Account From" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input type="number" class="form-control" asp-for="Amount" min="1" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input type="date" class="form-control" asp-for="Date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-outline-secondary mt-2" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>


@section Scripts{ 

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }



 
}