@model List<AccountEnterView>
@{ 
    ViewData["Title"] = "Add Account";
}


<h3>Add Account</h3>
<hr />
<section>
    <form method="POST" asp-action="Adding">
        <button class="btn btn-primary w-50" type="submit">Save All</button>
        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="row">
            
            <div class="col-md-7">
                <a asp-action="RemoveItem" asp-route-id="@i" class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </a>
                <div class="form-group">
                    <label asp-for="@Model[i].From"></label>
                    <input type="text" class="form-control" asp-for="@Model[i].From" maxlength="40" placeholder="Account From" />
                    <span asp-validation-for="@Model[i].From" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Amount"></label>
                    <input type="number" class="form-control" asp-for="@Model[i].Amount" min="1" />
                    <span asp-validation-for="@Model[i].Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Date"></label>
                    <input type="date" class="form-control" asp-for="@Model[i].Date"  />
                    <span asp-validation-for="@Model[i].Date" class="text-danger"></span>
                </div>

            </div>
        </div>
            <hr />
        }
    </form>
    <a class="btn btn-outline-info w-75 mt-3" asp-action="AddNew">Add Input</a>


</section>


@section Scripts{ 

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }



}