@model EmployeeView
@{ 
    ViewData["Title"] = (Model.ISCreate ? "Add New Employee" : "Edit Employee Info");
    if (!Model.ISCreate)
    {
        TempData["id"] = ViewBag.id;
    }
}


<h3>@(Model.ISCreate ? "Add New Employee" : "Edit Employee Info")</h3>

<form method="POST" asp-action="@(Model.ISCreate? "Create":"Edit")">
    <div class="row">
        <div class="col-md-7">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" class="form-control" asp-for="Name" maxlength="50" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleJop"></label>
                <input type="text" class="form-control" asp-for="TitleJop" maxlength="30" placeholder="Title Jop" />
                <span asp-validation-for="TitleJop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input type="number" class="form-control" asp-for="Salary" min="100" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datestart"></label>
                <input type="date" class="form-control" asp-for="datestart"  />
                <span asp-validation-for="datestart" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-outline-secondary mt-1" asp-action="Index">Cancel</a>
        </div>
    </div>
</form>



@section Scripts{ 

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}