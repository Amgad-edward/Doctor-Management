@model IEnumerable<Acccount_Reveal>
@{ 
    ViewData["Title"] = "Account Reveals";
}


<div class="card">
    <div class="card-header">
        Account Reveals
    </div>
    <div class="card-body">
        <h5 class="card-title">Show Account</h5>
         <form method="POST" asp-action="Account">
             <div class="row">
                 <div class="col-md-8">
                     <div class="form-check">
                         <input type="radio" class="form-check-input" id="rm0" name="N" value="today" />
                         <label class="form-check-label" for="rm0">To Day</label>
                     </div>
                     <div class="form-check mt-2">
                         <input type="radio" class="form-check-input" id="rm" name="N" value="month" />
                         <label class="form-check-label" for="rm">This Month</label>
                     </div>
                     <div class="form-check mt-2">
                         <div class="row">
                             <div class="col-md-2">
                                 <input type="radio" class="form-check-input" id="rm2" name="N" value="date" />
                                 <label class="form-check-label" for="rm2">By Date :</label>
                             </div>
                             <div class="col-md-5 ml-0">
                                 <input type="date" class="form-control" name="date" />
                             </div>
                         </div>
                     </div>
                     <div class="form-check mt-2">
                         <div class="row">
                             <div class="col-md-3">
                                 <input type="radio" class="form-check-input" id="rm3" name="N" value="fr" />
                                 <label class="form-check-label" for="rm3">By Date From :</label>
                             </div>
                             <div class="col-md-3 ml-0">
                                 <input type="date" class="form-control" name="from" />
                             </div>
                             To
                             <div class="col-md-3 ml-0">
                                 <input type="date" class="form-control" name="to" />
                             </div>
                         </div>
                     </div>
                     <div class="form-check mt-2">
                         <div class="row">
                             <div class="col-md-3">
                                 <input type="radio" class="form-check-input" id="rm4" name="N" value="Name" />
                                 <label class="form-check-label" for="rm4">By Name:</label>
                             </div>
                             <div class="col-md-7">
                                 <input type="text" name="txtname" class="form-control" placeholder="Customer Name" />
                             </div>
                         </div>
                     </div>
                     <button type="submit" class="btn btn-primary w-25 mt-2">Show</button>
                 </div>
             </div>
         </form>
    </div>
</div>

<div class="card w-75 mt-3">
    <div class="card-body">
        <h5 class="card-title text-info">Total : @Model.ToList().Sum(x=>x.Price) - Eg</h5>
    </div>
</div>

<div>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark sticky-top">
            <tr class="text-center">
                <th>Name Customer</th>
                <th>Date</th>
                <th>Gender Reveal</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="text-center">
                <td>@item.reveal.customer.NameCustomer</td>
                <td>@item.reveal.DateReservation.ToDate()</td>
                <td>@item.reveal.price.genderprice</td>
                <td>@item.Price</td>
            </tr>
            }
        </tbody>
    </table>
</div>