@model IEnumerable<Loging>

@{ 
    ViewData["Title"] = "Login users";
}


<h2>Manege Users</h2>
<a asp-action="Create" class="btn btn-primary">
    Add New User
    <i class="bi bi-person-plus"></i>
</a>
<hr />

<section class="container mt-5">

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>User Name</th>
                <th>Password</th>
                <th>Is Admin</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.UserName</td>
                    <td>@item.Password</td>
                    <td>
                        @if (item.Admin)
                        {
                        <span class="text-success">
                            <i class="bi bi-check-lg"></i>
                        </span>

                        }
                        else
                        {
                    <span class="text-danger">
                        <i class="bi bi-x-lg"></i>
                    </span>
                        }
                    </td>
                    <td>
                        <a data-id="@item.Id" class="btn btn-danger js" href="javascript:;">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>

@section Scripts{ 
 
  <script>


      $(document).ready(function () {
          $('.js').click(function () {
              let btu = $(this);
              bootbox.confirm({
                  message: 'هل تريد حذف هذا المستخدم؟؟',
                  buttons: {
                      confirm: {
                          label: 'Yes',
                          className:'btn-danger'
                      },
                      cancel: {
                          label: 'No',
                          className:'btn-success',
                      }
                  },
                  callback: function (result) {
                      if (result) {
                          $.ajax({
                              url: '/Login/delete/' + btu.data('id'),
                              type: 'GET',
                              success: function () {
                                  let parnt = btu.parents('tr');
                                  parnt.addClass('animate__animated animate__bounceOutLeft');
                                  setTimeout(function () {
                                      parnt.remove();
                                  },1000);
                                  toastr.success('Delete Done');
                              },
                              error: function (e) {
                                  toastr.error('No delete only user!!')
                                  console.log(e.responseText);
                              }

                          });
                      }
                  }
              });
              

          });

      });


  </script>

}